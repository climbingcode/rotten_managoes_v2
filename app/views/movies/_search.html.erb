<div class="col-sm-12 row">
	<%= form_tag('/movies', method: 'GET') do %>
		
		<div class="col-sm-3">
			<%= select_tag(:runtime, options_for_select({ 'Any' => 'any', 'Under 90 min' => 'under_90', 'Over 90 min' => 'over_90'}), class: 'form-control' ) %>
		</div>

		<div class="col-sm-3">
			<%= text_field_tag :query, "", class: 'form-control col-sm-3' %>
		</div>

		<div class="col-sm-3">
			<%= submit_tag 'Search', class: 'btn btn-success' %>
		</div>

	<% end %>
</div>